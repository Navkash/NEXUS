<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <RelativeLayout
        android:layout_marginTop="57dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/custom_team_item"
            android:background="@drawable/custom_team_item"
            app:contentPadding="0dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#fff">

            <!--<ImageView-->
                <!--android:id="@+id/image"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_margin="10dp"-->
                <!--android:scaleType="fitXY"-->
                <!--android:background="@color/design_default_color_primary"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:text="navkash"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textColor="#081725" />

                <TextView
                    android:id="@+id/team_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App dev"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="#081725" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home_black_24dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/phone_button"
                    />
                <ImageButton
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home_black_24dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/whatsApp_button"
                    />
            </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/team_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_color="#000"
        app:civ_border_width="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@color/fui_bgPhone"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>